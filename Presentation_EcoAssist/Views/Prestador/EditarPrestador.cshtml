@using Presentation.Extensions
@model ERP_CRM_Solution.ViewModels.PrestadorViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">

    <div class="page-title">
        <h3 class="title">Prestadores</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaPrestador", "Prestador")">Prestadores</a>
            </li>
            <li class="active">
                <strong>Prestador - Consulta & Edição</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Prestador - Consulta & Edição</h5>
                </div>

                <div class="ibox-content">
                    <div class="form-group">
                        <br />
                        @Html.ButtonLinkIndex(text: "Dashboard", controller: "Prestador", action: "Voltar")
                        @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBasePrestador", controller: "Prestador")
                    </div>
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-2">Anexos</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-7">Anotações</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-3">Endereços</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-4">Contatos</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-7">Ajudantes</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-8">Bancos</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-9">Certificados</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-10">Motoristas</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-11">Regiões</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-12">Veículos</a></li>
                        </ul>
                        <div class="tab-content">

                            @*Dados Gerais*@
                            <div id="tab-1" class="tab-pane active">
                                <div class="panel-body">
                                    @using (Html.BeginForm("EditarPrestador", "Prestador", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                    {
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;" id="PJ">
                                                <div class="col-lg-2 col-md-2 col-xs-12" style="color:green; font-weight:bold">
                                                    @Html.HiddenFor(m => m.PRES_DT_DATA_CADASTRO)
                                                    @Html.HiddenFor(m => m.PRES_IN_FLAG_ATIVO)
                                                    @Html.HiddenFor(m => m.PRES_CD_ID)
                                                    CNPJ
                                                    @Html.TextBoxFor(m => m.PRES_NR_CNPJ, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-xs-12" id="razao">
                                                    Razão Social*
                                                    @Html.TextBoxFor(m => m.PRES_NM_RAZAO_SOCIAL, new { @class = "form-control", autofocus = true, id = "valRazao" })
                                                    @Html.ValidationMessageFor(m => m.PRES_NM_RAZAO_SOCIAL, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Nome*
                                                    @Html.TextBoxFor(m => m.PRES_NM_NOME, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PRES_NM_NOME, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    <hr />
                                                    <h4>Quadro Societário</h4>
                                                    <br />
                                                    <table style="width: 100%;" class="table table-striped table-bordered table-hover dataTables-example" id="tblQs">
                                                        <thead style="background-color:lightblue">
                                                            <tr>
                                                                <th>Qualificação</th>
                                                                <th>Nome</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var cond in (List<EntitiesServices.Model.PRESTADOR_QUADRO_SOCIETARIO>)ViewBag.QuadroSoci)
                                                            {
                                                                <tr>
                                                                    <td>@cond.PRQS_NM_QUALIFICACAO</td>
                                                                    <td>@cond.PRQS_NM_NOME</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;" id="PJ">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Responsável*
                                                    @Html.TextBoxFor(m => m.PRES_NM_RESPONSAVEL, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PRES_NM_RESPONSAVEL, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12" id="razao">
                                                    Cargo
                                                    @Html.TextBoxFor(m => m.PRES_DS_CARGO, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PRES_DS_CARGO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Início da Atividade
                                                    @Html.TextBoxFor(m => m.PRES_DT_INICIO_ATIVIDADE, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true, id = "data" })
                                                    @Html.ValidationMessageFor(m => m.PRES_DT_INICIO_ATIVIDADE, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Usuário Prime
                                                    @Html.TextBoxFor(m => m.PRES_NR_USUARIO_PRIME, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PRES_NR_USUARIO_PRIME, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;" id="PJ">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    E-Mail Principal*
                                                    @Html.TextBoxFor(m => m.PRES_EM_EMAIL_PRINCIPAL, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PRES_EM_EMAIL_PRINCIPAL, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12" id="razao">
                                                    Telefone Principal
                                                    @Html.TextBoxFor(m => m.PRES_NR_TELEFONE_PRINCIPAL, new { @class = "form-control", autofocus = true, @id="tel" })
                                                    @Html.ValidationMessageFor(m => m.PRES_NR_TELEFONE_PRINCIPAL, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Celular Principal
                                                    @Html.TextBoxFor(m => m.PRES_NR_CELULAR_PRINCIPAL, new { @class = "form-control", autofocus = true, @id="cel" })
                                                    @Html.ValidationMessageFor(m => m.PRES_NR_CELULAR_PRINCIPAL, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    WhatsApp
                                                    @Html.TextBoxFor(m => m.PRES_NR_WHATSAPP_PRINCIPAL, new { @class = "form-control", autofocus = true, @id="wpp" })
                                                    @Html.ValidationMessageFor(m => m.PRES_NR_WHATSAPP_PRINCIPAL, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    WebSite
                                                    @Html.TextBoxFor(m => m.PRES_NM_WEBSITE, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PRES_NM_WEBSITE, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;" id="PJ">
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Func. CLT
                                                    @Html.TextBoxFor(m => m.PRES_NR_FUNCIONARIOS_CLT, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PRES_NR_FUNCIONARIOS_CLT, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12" id="razao">
                                                    Func.Terceiros
                                                    @Html.TextBoxFor(m => m.PRES_NR_FUNCIONARIOS_TERCEIROS, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PRES_NR_FUNCIONARIOS_TERCEIROS, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Seguro
                                                    <br />
                                                    @Html.CheckBoxFor(m => m.Seguro, new { @class = "checkbox i-checks", autofocus = true })
                                                </div>                                                
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Uniforme
                                                    <br />
                                                    @Html.CheckBoxFor(m => m.UniformeProprio, new { @class = "checkbox i-checks", autofocus = true })
                                                </div>                                                
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Unif.EcoAssist
                                                    <br />
                                                    @Html.CheckBoxFor(m => m.UniformeEcoAssist, new { @class = "checkbox i-checks", autofocus = true })
                                                </div>                                                
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Rastreamento
                                                    <br />
                                                    @Html.CheckBoxFor(m => m.Rastreamento, new { @class = "checkbox i-checks", autofocus = true })
                                                </div>                                         
                                            </div>
                                            <h5 style="color:green; font-weight:bold">Frota Própria ----------------------------------------------------------</h5>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;" id="PJ">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Caminhões
                                                    @Html.TextBoxFor(m => m.PRES_NR_PROPRIA_CAMINHAO, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PRES_NR_PROPRIA_CAMINHAO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12" id="razao">
                                                    Utilitários
                                                    @Html.TextBoxFor(m => m.PRES_NR_PROPRIA_UTILITARIO, new { @class = "form-control", autofocus = true, @id="tel" })
                                                    @Html.ValidationMessageFor(m => m.PRES_NR_PROPRIA_UTILITARIO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Motos
                                                    @Html.TextBoxFor(m => m.PRES_NR_PROPRIA_MOTO, new { @class = "form-control", autofocus = true, @id="cel" })
                                                    @Html.ValidationMessageFor(m => m.PRES_NR_PROPRIA_MOTO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Seguro Frota Própria
                                                    <br />
                                                    @Html.CheckBoxFor(m => m.SeguroProprio, new { @class = "checkbox i-checks", autofocus = true })
                                                </div>                                         
                                            </div>
                                            <h5 style="color:green; font-weight:bold">Frota Terceirizada ----------------------------------------------------------</h5>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;" id="PJ">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Caminhões
                                                    @Html.TextBoxFor(m => m.PRES_NR_TERCEIRO_CAMINHAO, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PRES_NR_TERCEIRO_CAMINHAO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12" id="razao">
                                                    Utilitários
                                                    @Html.TextBoxFor(m => m.PRES_NR_TERCEIRO_UTILITARIO, new { @class = "form-control", autofocus = true, @id="tel" })
                                                    @Html.ValidationMessageFor(m => m.PRES_NR_TERCEIRO_UTILITARIO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Motos
                                                    @Html.TextBoxFor(m => m.PRES_NR_TERCEIRO_MOTO, new { @class = "form-control", autofocus = true, @id="cel" })
                                                    @Html.ValidationMessageFor(m => m.PRES_NR_TERCEIRO_MOTO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Seguro Terceirizado
                                                    <br />
                                                    @Html.CheckBoxFor(m => m.TerceiroSeguro, new { @class = "checkbox i-checks", autofocus = true })
                                                </div>                                         
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Observações
                                                    @Html.TextAreaFor(m => m.PRES_TX_OBSERVACOES, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PRES_TX_OBSERVACOES, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                        <div class="form-group">
                                            @Html.ButtonActionSubmit(text: "Confirma edição de Prestador", htmlAttributes: new { id = "basictoast", style = "margin-bottom: -35px;" })
                                        </div>
                                    }
                                </div>
                            </div>

                            @*Anexos*@
                            <div id="tab-2" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-xs-12">
                                            <h4>Anexos</h4>
                                            <br />
                                            <div class="form-group">
                                                @using (Html.BeginForm("UploadFilePrestador", "Prestador", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "pwd-container2" }))
                                                {
                                                    <div class="ibox-content">
                                                        @if (Model.PRESTADOR_ANEXO.Count > 0)
                                                        {
                                                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                                                <thead style="background-color:lightsteelblue">
                                                                    <tr>
                                                                        <th>Título</th>
                                                                        <th>Data</th>
                                                                        <th>Tipo</th>
                                                                        <th class="td-one-action">Ações</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var cond in (Model.PRESTADOR_ANEXO))
                                                                    {
                                                                        <tr>
                                                                            <td>@cond.PRAN_NM_TITULO</td>
                                                                            <td>@cond.PRAN_DT_ANEXO.ToShortDateString()</td>
                                                                            @if (cond.PRAN_IN_TIPO == 1)
                                                                            {
                                                                                <td>Imagem</td>
                                                                            }
                                                                            else if (cond.PRAN_IN_TIPO == 2)
                                                                            {
                                                                                <td>Vídeo</td>
                                                                            }
                                                                            else
                                                                            {
                                                                                <td>Arquivo</td>
                                                                            }
                                                                            <td class="td-one-action">
                                                                                @if (cond.PRAN_IN_TIPO == 1 || cond.PRAN_IN_TIPO == 2)
                                                                                {
                                                                                    @Html.TableLinkDetails(cond.PRAN_CD_ID, "VerAnexoPrestador", "fa-camera", "Visualizar")
                                                                                }
                                                                                @if (cond.PRAN_IN_TIPO == 3)
                                                                                {
                                                                                    <a title="Visualizar" class="fa fa-camera fa-lg" href="~/PdfViewer/web/viewer.html?file=@(cond.PRAN_AQ_ARQUIVO.Replace("~", ""))&ReturnUrl=@Request.Url.AbsolutePath" target="_blank" ></a>
                                                                                }
                                                                                @Html.TableLinkDetails(cond.PRAN_CD_ID, "DownloadPrestador", "fa-download", "Download")
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        }
                                                        <div class="form-group">
                                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                                <input style="float: left; margin-right: 5px;" type="file" name="file" id="file" class="btn btn-sm btn-warning" />
                                                                <input style="float: left; margin-right: 5px;" type="submit" value="Incluir Anexo do Prestador" class="btn btn-sm btn-success" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Anotações*@
                            <div id="tab-7" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <h4>Anotações</h4>
                                            @if (Model.PRESTADOR_ANOTACOES.Count > 0)
                                            {
                                                foreach (var item in (Model.PRESTADOR_ANOTACOES).OrderByDescending(a => a.PRAN_DT_ANOTACAO))
                                                {
                                                    <div class="social-feed-box">
                                                        <div class="social-avatar">
                                                            <a href="" class="pull-left">
                                                                <img src="@Url.Content(item.USUARIO_SUGESTAO.USUA_AQ_FOTO)" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                            </a>
                                                            <div class="media-body">
                                                                <a href="#">
                                                                    @item.USUARIO_SUGESTAO.USUA_NM_NOME
                                                                </a>
                                                                <small class="text-muted">@item.PRAN_DT_ANOTACAO.ToString("dd/MM/yyyy HH:mm")</small>
                                                            </div>
                                                        </div>
                                                        <div class="social-body">
                                                            <p>
                                                                @item.PRAN_TX_ANOTACAO
                                                            </p>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                    <br />
                                    <div class="form-group">
                                        @Html.ButtonLinkIndex(text: "Incluir Nova Anotação", action: "IncluirComentario", controller: "Prestador")
                                    </div>
                                </div>
                            </div>

                            @*Contatos*@
                            <div id="tab-4" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                <h4>Contatos</h4>
                                                <br />
                                                @if (Model.PRESTADOR_CONTATO.Count > 0)
                                                {
                                                    <table class="table table-striped table-bordered table-hover dataTables-example">
                                                        <thead style="background-color:lightsteelblue">
                                                            <tr>
                                                                <th>Nome</th>
                                                                <th>Cargo</th>
                                                                <th>E-Mail</th>
                                                                <th>Telefone</th>
                                                                <th>Celular</th>
                                                                <th>WhapsApp</th>
                                                                <th class="td-one-action">Ações</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var cond in (Model.PRESTADOR_CONTATO))
                                                            {
                                                                <tr>
                                                                    <td>@cond.PRCO_NM_NOME</td>
                                                                    <td>@cond.PRCO_NM_CARGO</td>
                                                                    <td><a href="@Url.Action("EnviarEMailContato", "Prestador", new { id = cond.PRCO_CD_ID })" />@cond.PRCO_EM_EMAIL</td>
                                                                    <td>@cond.PRCO_NR_TELEFONE</td>
                                                                    <td><a href="@Url.Action("EnviarSMSContato", "Prestador", new { id = cond.PRCO_CD_ID })" />@cond.PRCO_NR_CELULAR</td>
                                                                    <td>@cond.PRCO_NR_WHATSAPP</td>
                                                                    <td class="td-one-action">
                                                                        @Html.TableLinkDetails(cond.PRCO_CD_ID, "EditarContato", "fa-edit", "Editar/Consultar Contato")
                                                                        @if (cond.PRCO_IN_ATIVO == 1)
                                                                        {
                                                                            @Html.TableLinkDetails(cond.PRCO_CD_ID, "ExcluirContato", "fa-trash-o", "Desativar Contato")
                                                                        }
                                                                        else
                                                                        {
                                                                            @Html.TableLinkDetails(cond.PRCO_CD_ID, "ReativarContato", "fa-refresh", "Reativar Contato")
                                                                        }
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.ButtonLinkIndex(text: "Incluir Novo Contato", action: "IncluirContato", controller: "Prestador")
                                    </div>
                                </div>
                            </div>

                            @*Endereços*@
                            <div id="tab-3" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                <h4>Endereços</h4>
                                                <br />
                                                @if (Model.PRESTADOR_ENDERECO.Count > 0)
                                                {
                                                    <table class="table table-striped table-bordered table-hover dataTables-example">
                                                        <thead style="background-color:lightsteelblue">
                                                            <tr>
                                                                <th>Endereço</th>
                                                                <th>Número</th>
                                                                <th>Complemento</th>
                                                                <th>Bairro</th>
                                                                <th>Cidade</th>
                                                                <th>UF</th>
                                                                <th>CEP</th>
                                                                <th class="td-one-action">Ações</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var cond in (Model.PRESTADOR_ENDERECO))
                                                            {
                                                                <tr>
                                                                    <td>@cond.PREN_NM_ENDERECO</td>
                                                                    <td>@cond.PRE_NR_NUMERO</td>
                                                                    <td>@cond.PREN_NM_COMPLEMENTO</td>
